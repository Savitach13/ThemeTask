<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTheme1"
            android:src="@drawable/ic_baseline_lens_50"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            app:tint="@color/theme1ColorPrimary" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTheme2"
            android:src="@drawable/ic_baseline_lens_50"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            app:tint="@color/theme2ColorPrimary" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTheme3"
            android:src="@drawable/ic_baseline_lens_50"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            app:tint="@color/theme3ColorPrimary" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnTheme4"
            android:src="@drawable/ic_baseline_lens_50"
            android:layout_weight="0.25"
            android:backgroundTint="@color/white"
            app:tint="@color/theme4ColorPrimary" />

    </LinearLayout>




</RelativeLayout>